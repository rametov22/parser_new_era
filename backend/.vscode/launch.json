{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django (container)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "0.0.0.0:8000"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "DJANGO_SETTINGS_MODULE": "config.settings"
            }
        }
    ]
}